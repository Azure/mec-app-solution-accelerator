{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "UrlPrefix": "mongodb",
    "Hostname": "mongo",
    "PortNumber": "27017",
    "DatabaseName": "detections"
  },
  "AlertsClassesConfig": {
    "ClassesConfig": [
      {
        "Name": "car",
        "Alerts": [ "VehicleDetected", "Traffic" ]
      },
      {
        "Name": "person",
        "Alerts": [ "PeopleGroupDetected" ]
      },
      {
        "Name": "bed",
        "Alerts": [ "LyingDownPerson", "Furniture" ]
      },
      {
        "Name": "bench",
        "Alerts": [ "Furniture" ]
      },
      {
        "Name": "chair",
        "Alerts": [ "Furniture" ]
      },
      {
        "Name": "couch",
        "Alerts": [ "Furniture" ]
      },
      {
        "Name": "boat",
        "Alerts": [ "VehicleDetected" ]
      },
      {
        "Name": "airplane",
        "Alerts": [ "VehicleDetected" ]
      }
    ],
    "AlertsConfig": [
      {
        "AlertName": "DetectedCar",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          }
        ]
      },
      {
        "AlertName": "Traffic",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "car",
            "NumberfObjects": 2
          },
          {
            "RuleName": "MultipleClassesDetected",
            "MultipleObjects": [ "car" ]
          }
        ]
      },
      {
        "AlertName": "LyingDownPerson",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "person",
            "NumberfObjects": 1
          },
          {
            "RuleName": "MultipleClassesDetected",
            "MultipleObjects": [ "bed", "person" ]
          }
        ]
      },
      {
        "AlertName": "Furniture",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          }
        ]
      },
      {
        "AlertName": "VehicleDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          }
        ]
        //},
        //{
        //  "AlertName": "PersonDetected",
        //  "RulesConfig": [
        //    {
        //      "RuleName": "MinimumThresholdValidation",
        //      "MinimumThreshold": 70
        //    }
      },
      {
        "AlertName": "PeopleGroupDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 70
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "person",
            "NumberfObjects": 2
          }
        ]
      }
    ]
  }
}