{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "UrlPrefix": "mongodb",
    "Hostname": "mongo",
    "PortNumber": "27017",
    "DatabaseName": "detections"
  },
  
    "AlertsTypesConfig": 
      [
        {
          "PossibleDetectedObject": [ "Persona", "Sofa", "Persona" ],
          "DetectionOperator": "and",
          "Alerts": [
            {
              "AlertName": "VariasPersonasSentadasSofa",
              "RulesConfig": [
                {
                  "RuleName": "FramesValidation",
                  "Execute": false,
                  "MinimumNumberOfFrames": 3
                },
                {
                  "RuleName": "MinimumThresholdValidation",
                  "Execute": true,
                  "MinimumThreshold": 70
                },
                {
                  "RuleName": "MinimumNumberOfObjectsDetected",
                  "DetectedObject": "Persona",
                  "NumberfObjects": 2
                }
              ]
            },
            {
              "AlertName": "PersonasSentadaSofa",
              "RulesConfig": [
                {
                  "RuleName": "FramesValidation",
                  "Execute": false,
                  "MinimumNumberOfFrames": 3
                },
                {
                  "RuleName": "MinimumThresholdValidation",
                  "Execute": true,
                  "MinimumThreshold": 70
                }
              ]
            },
            {
              "AlertName": "ArmasDetectadasAlertaAmarilla",
              "RulesConfig": [
                {
                  "RuleName": "FramesValidation",
                  "Execute": false,
                  "MinimumNumberOfFrames": 1
                },
                {
                  "RuleName": "MinimumThresholdValidation",
                  "Execute": true,
                  "MinimumThreshold": 30
                },
                {
                  "RuleName": "LogicOperator",
                  "Operator": "or"
                }
              ]
            }
          ]

        },
        {
          "PossibleDetectedObject": [ "Arma", "Persona" ],
          "AlertName": "PersonaArmada",
          "RulesConfig": [
            {
              "RuleName": "FramesValidation",
              "Execute": true,
              "MinimumNumberOfFrames": 4
            },
            {
              "RuleName": "ThresholdValidation",
              "Execute": true,
              "MinimumThreshold": 70
            },
            {
              "RuleName": "LogicOperator",
              "Operator": "And"
            }
          ]
        }
    ]
}
