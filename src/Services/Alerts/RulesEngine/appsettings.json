{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "UrlPrefix": "mongodb",
    "Hostname": "mongo",
    "PortNumber": "27017",
    "DatabaseName": "detections"
  },
  "AlertsClassesConfig": {
    "ClassesConfig": [
      {
        "Name": "car",
        "Alerts": [ "VehicleDetected" ]
      },
      {
        "Name": "person",
        "Alerts": [ "PersonDetected" ]
      }
    ],
    "AlertsConfig": [
      {
        "AlertName": "VehicleDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 30
          }
        ]
      },
      {
        "AlertName": "PersonDetected",
        "RulesConfig": [
          {
            "RuleName": "MinimumThresholdValidation",
            "MinimumThreshold": 60
          },
          {
            "RuleName": "MinimumNumberOfObjectsDetected",
            "DetectedObject": "person",
            "NumberfObjects": 1
          }
        ]
      }
    ]
  },
  "Mqtt": {
    "ConnectionString": "mosquitto.mec-accelerator.svc.cluster.local",
    "Port": 1883
  }
}