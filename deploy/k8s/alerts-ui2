kind: Service
apiVersion: v1
metadata:
  name: alerts-ui
  # namespace: mec-core
  labels:
    app: alerts-ui
spec:
  selector:
    app: alerts-ui
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
  type: LoadBalancer

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: alerts-ui
  labels:
    app: alerts-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: alerts-ui
  template:
    metadata:
      labels:
        app: alerts-ui
      annotations:
        dapr.io/enabled: "true"
        dapr.io/app-id: "alerts-ui"
        dapr.io/app-port: "80"
        # dapr.io/config: "dapr-config"
    spec:
      containers:
      - name: alerts-ui
        # image: cesardl/myfrontend:latest
        image: pabravil/myfrontend:dev
        ports:
        - containerPort: 80
        imagePullPolicy: Always